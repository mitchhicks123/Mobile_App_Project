    <ImageView
        android:id="@+id/imageView"
        android:layout_width="370dp"
        android:layout_height="75dp"
        android:layout_marginTop="20dp"
        android:contentDescription="TODO"
        app:layout_constraintEnd_toEndOf="parent"
